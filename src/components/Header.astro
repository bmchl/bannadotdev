---
import Socials from './Socials.astro';

---
<div class="fixed top-5 left-0 right-0 z-50 px-5 backdrop-filter backdrop-blur-lg backdrop-opacity-50">
  <div class="flex justify-between max-w-screen-xl mx-auto">
    <div class="bg-primary-dark text-primary-light p-4 rounded-lg shadow-lg opacity-100 h-20 text-xl w-auto flex-grow">
      <nav class="flex items-center justify-between h-full">
